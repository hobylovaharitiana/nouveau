<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap CRUD Data Table for Database with Modal Form</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/personnes.js"></script>
    <script src="js/nav.js"></script>

    <link rel="stylesheet" href="cssnv/stylepers.css">
    <link rel="stylesheet" href="cssboot/style.css">
    <link rel="stylesheet" href="fontawesome/font.css">
    <link rel="stylesheet" href="cssboot/icon.css">
    <link rel="stylesheet" href="cssboot/roboto.css">
    <link rel="stylesheet" href="cssboot/roboto.css">
    <link rel="stylesheet" href="style.css">


    <style>
        .contenu{
            font-family: Verdana,sans-serif;
            font-weight: 20px;
        }
        .titre{
            color: navajowhite;
        }

        body{
            background-image:  url("/images/EX.jpg");
            color: #f1f1f1;
            font-family: "cursive";

        }

        .table-wrapper {
            background: radial-gradient(black, transparent);
            padding: 20px 25px;
            margin: 30px 0;
            border-radius: 3px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }
        table.table-striped tbody tr:nth-of-type(odd) {
            background: radial-gradient(black, transparent);
        }
        table.table-striped.table-hover tbody tr:hover {
            background: black;
        }
    </style>

</head>


<body >


    <nav class="navbar">
        <span class="navbar-toggle" id="js-navbar-toggle">
            <i class="fas fa-bars"></i>
        </span>
    <li>
            <a href="#" class="nav-links">Accueil</a>
        </li>
        <li>
            <a href="{{ path('read_direction') }}" class="nav-links">Direction</a>
        </li>
        <li>
            <a href="{{ path('read_service') }}" class="nav-links">Service</a>
        </li>
        <li>
            <a href="{{ path('read_materiel') }}" class="nav-links">Materiel</a>
        </li>
        <li>
            <a href="{{ path('read_panne') }}" class="nav-links">Panne</a>
        </li>
        <li>
            <a href="{{ path('read_probleme') }}" class="nav-links">Probleme Materiel</a>
        </li>

        </ul>
</nav>




<div class="container">

    <div class="table-wrapper">

        <div class="col-sm-6">

            <a onclick="document.getElementById('id01').style.display='block'" class="btn btn-success" data-toggle="modal"> <span>Ajouter</span></a>
        </div>

        <div class="table-title">

            <div class="row">
                <div class="search-container">
                    <form action="{{ path('read_personne') }}" method="post">
                        <input type="text" placeholder="Search.." name="search">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>


                <div class="col-sm-6">
                    </div>
               </div>


        </div>

       <table class="table table-striped table-hover">
            <thead>
            <tr class="titre">
                <th></th>
                <th>id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
            </thead>
            {% for personne in personnes %}
                <tbody class= "contenu">
                <th></th>
                <th>{{ personne.id }}</th>
                <th>{{ personne.nomPersonne }}</th>
                <th>{{ personne.prenomPersonne }}</th>
                <th>{{ personne.emailPersonne }}</th>
                <th>{{ personne.telephone }}</th>
                <th>{{ personne.adresse }}</th>
                <th>{{ personne.personneType.nomType }}</th>
                <td>

                    {# <a href="{{ path('modify_personne', {'id': personne.id}) }}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a> #}
                    <a href="#editPersonne{{ personne.id }}" class="edit" data-toggle="modal">
                        <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                    </a>
                    <!-- Edit Modal HTML -->
                    <div id="editPersonne{{ personne.id }}" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" action="{{ path('edit_personne') }}">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Edit Employee</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="idPersonne" value="{{ personne.id }}">
                                        <div class="form-group">
                                            <label>Nom personne</label>
                                            <input type="text" id="nomPersonne{{ personne.id }}" name="nomPersonne" value="{{ personne.nomPersonne }}" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>prenom Personne</label>
                                            <input type="text" id="prenomPersonne{{ personne.id }}" name="prenomPersonne" value="{{ personne.prenomPersonne }}" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>email</label>
                                            <input type="text" id="emailPersonne{{ personne.id }}" name="emailPersonne" value="{{ personne.emailPersonne }}" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>telephone</label>
                                            <input type="text" id="telephone{{ personne.id }}" name="telephone" value="{{ personne.telephone }}" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Addresse</label>
                                            <input type="text" id="adresse{{ personne.id }}" name="adresse" value="{{ personne.adresse }}" class="form-control" required>
                                        </div>
                                        <div
                                                class="form-group">
                                            <!-- eto le select atao aona le -->
                                            <label>Type</label>
                                            <select id="typePersonne{{ personne.id }}" name="typePersonne">
                                                <option value="{{ personne.personneType.id }}">{{ personne.personneType.nomType }}</option>
                                                {% for pt in listPt %}
                                                    {% if pt.id != personne.personneType.id %}
                                                        <option value="{{ pt.id }}">{{ pt.nomType }}</option>
                                                    {% endif %}
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-info" value="Save">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <a href="{{ path('delete_personne', {'id': personne.id}) }}" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>


                </td>
                </tbody>
            {% endfor %}


        </table>

        <div class="clearfix">
            <ul class="pagination">
                <li class="page-item">{{ knp_pagination_render(personnes) }}</li>
            </ul>
        </div>
    </div>
</div>

