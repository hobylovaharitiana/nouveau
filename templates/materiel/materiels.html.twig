                {{ form_widget(form.marqueMateriel, {'required' : true ,'attr' : {'class' : 'form-control', 'placeholder' : 'Marque materiel', 'autocomplete' : 'off'}}) }}
            </div>
            <div class="form-group">
                <label>Caracteristiques</label>
                {{ form_widget(form.caracteristique, {'required' : true ,'attr' : {'class' : 'form-control', 'placeholder' : 'Caracteristique', 'autocomplete' : 'off'}}) }}
            </div>
            <div class="form-group">
                <label>NomPersonne</label>
                <select name="personne">
                    {% for personne in personnes %}
                        <option value="{{ personne.id }}">{{ personne.nomPersonne }}</option>
                    {% endfor %}
