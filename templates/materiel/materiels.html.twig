<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap CRUD Data Table for Database with Modal Form</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="js/personnes.js"></script>

    <link rel="stylesheet" href="cssnv/stylepers.css">
    <link rel="stylesheet" href="cssboot/style.css">
    <link rel="stylesheet" href="fontawesome/font.css">
    <link rel="stylesheet" href="cssboot/icon.css">

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="cssnv/w3.css">

<body>
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Materiel</h2>
                </div>
                <div class="col-sm-6">
                    <a onclick="document.getElementById('id01').style.display='block'" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Ajouter</span></a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th></th>
                <th>id</th>
                <th>Nom</th>
                <th>Marque</th>
                <th>Caracteristiques</th>
                <th>NomPersonne</th>
                <th>Actions</th>
            </tr>
            </thead>
            {% for materiel in materiels  %}
                <tbody>
                <td></td>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.nomMateriel }}</td>
                <td>{{ materiel.marqueMateriel }}</td>
                <td>{{ materiel.caracteristique }}</td>
                <th>{{ materiel.personnes.nomPersonne }}</th>
                <td>
                    <a href="{{ path('modify_materiel', {'id': materiel.id}) }}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                    <a href="{{ path('delete_materiel', {'id': materiel.id}) }}" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                </td>
                </tbody>
            {% endfor %}

        </table>
    </div>
</div>
<!-- Edit Modal HTML -->


<!-- Edit Modal HTML -->
<div id="editEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Edit Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
            </form>
        </div>
    </div>
</div>


<div class="w3-container">


    <div id="id01" class="w3-modal">
        <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">

            {% block body %}
                {{ form_start(form) }}
                <h1>{{ form_title }}</h1>
                {{ form_widget(form.nomMateriel, {'attr' : {'class' : 'w3-input w3-border w3-margin-bottom', 'placeholder' : 'nom_materiel', 'autocomplete' : 'off'}}) }}
                {{ form_widget(form.marqueMateriel, {'attr' : {'class' : 'w3-input w3-border w3-margin-bottom', 'placeholder' : 'marque_materiel', 'autocomplete' : 'off'}}) }}
                {{ form_widget(form.caracteristique, {'attr' : {'class' : 'w3-input w3-border w3-margin-bottom', 'placeholder' : 'caracteristique', 'autocomplete' : 'off'}}) }}

                <select name="personne">
                    {% for personne in personnes %}
                        <option value="{{ personne.id }}">{{ personne.nomPersonne }}</option>
                    {% endfor %}
                </select>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            {% endblock %}

            <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
                <button onclick="document.getElementById('id01').style.display='none'" type="button" class="w3-button w3-red">Cancel</button>
                <button onclick="document.getElementById('id01').style.display='none'" type="submit" class="w3-button w3-blue">Ajouter</button>
            </div>

        </div>
    </div>
</div>

</body>
</html>